<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/off_white"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">

            <include
                layout="@layout/loading_spinner"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/insuranceActive"
                android:layout_marginTop="24dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_filled_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/insuranceActiveLabel"
                android:layout_marginTop="8dp"
                android:textColor="@color/off_black_dark"
                android:fontFamily="@font/circular_book"
                android:textSize="14sp"
                android:text="Din försäkring är aktiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/insuranceActive" />

            <TextView
                android:id="@+id/perilsTitle"
                android:fontFamily="@font/circular_bold"
                android:textSize="16sp"
                android:textColor="@color/off_black_dark"
                android:layout_marginStart="24dp"
                android:layout_marginTop="48dp"
                android:text="Ditt skydd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/insuranceActiveLabel" />

            <LinearLayout
                android:id="@+id/perilCategoryContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/perilsTitle">

                <com.hedvig.android.owldroid.ui.dashboard.PerilCategoryView
                    android:id="@+id/personalCoverageCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="@dimen/base_margin_half"
                    android:layout_marginBottom="@dimen/base_margin_half"
                    app:categoryUrl="https://s3.eu-central-1.amazonaws.com/com-hedvig-web-content/du_och_din_familj%402x.png"
                    app:subtitle="försäkras för"
                    app:title="Jag och min familj" />

                <com.hedvig.android.owldroid.ui.dashboard.PerilCategoryView
                    android:id="@+id/homeCoverageCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="@dimen/base_margin_half"
                    android:layout_marginBottom="@dimen/base_margin_half"
                    app:categoryUrl="https://s3.eu-central-1.amazonaws.com/com-hedvig-web-content/lagenhet%402x.png"
                    app:subtitle="försäkras för"
                    app:title="Lomvägen 641" />

                <com.hedvig.android.owldroid.ui.dashboard.PerilCategoryView
                    android:id="@+id/thingsCoverageCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="@dimen/base_margin_half"
                    android:layout_marginBottom="@dimen/base_margin"
                    app:categoryUrl="https://s3.eu-central-1.amazonaws.com/com-hedvig-web-content/prylar%402x.png"
                    app:subtitle="försäkras för"
                    app:title="Våra prylar" />

            </LinearLayout>

