<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/off_white"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent">

            <include
                layout="@layout/loading_spinner"
                tools:visibility="gone" />

            <ImageView
                android:id="@+id/insuranceActive"
                android:layout_marginTop="24dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_filled_checkmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/insuranceActiveLabel"
                android:layout_marginTop="8dp"
                android:textColor="@color/off_black_dark"
                android:fontFamily="@font/circular_book"
                android:textSize="14sp"
                android:text="Din försäkring är aktiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/insuranceActive" />

            <TextView
                android:id="@+id/perilsTitle"
                android:fontFamily="@font/circular_bold"
                android:textSize="16sp"
                android:textColor="@color/off_black_dark"
                android:layout_marginStart="24dp"
                android:layout_marginTop="48dp"
                android:text="Ditt skydd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/insuranceActiveLabel" />

            <android.support.design.card.MaterialCardView
                android:id="@+id/personalCoverageCard"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/perilsTitle">

                <android.support.constraint.ConstraintLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/personalCoverageIcon"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_family"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/personalCoveragePerilContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toTopOf="@id/personalCoveragePerilContainer"
                        app:layout_constraintStart_toEndOf="@id/personalCoverageIcon"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/off_black_dark"
                            android:fontFamily="@font/circular_book"
                            android:text="Jag och min familj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/circular_book"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:text="försäkras för"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:contentDescription="@null"
                        android:src="@drawable/ic_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/personalCoveragePerilContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/personalCoveragePerilContainer"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.design.card.MaterialCardView>

            <android.support.design.card.MaterialCardView
                android:id="@+id/homeCoverageCard"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/personalCoverageCard">

                <android.support.constraint.ConstraintLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/homeCoverageIcon"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/homeCoverageIcon"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/off_black_dark"
                            android:fontFamily="@font/circular_book"
                            android:text="Lomvägen 641"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/circular_book"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:text="försäkras för"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:contentDescription="@null"
                        android:src="@drawable/ic_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.design.card.MaterialCardView>

            <android.support.design.card.MaterialCardView
                android:id="@+id/thingsCoverageCard"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/homeCoverageCard">

                <android.support.constraint.ConstraintLayout
                    android:layout_margin="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thingsCoverageIcon"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_things"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/thingsCoverageIcon"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/off_black_dark"
                            android:fontFamily="@font/circular_book"
                            android:text="Våra prylar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:fontFamily="@font/circular_book"
                            android:textSize="14sp"
                            android:textColor="@color/gray"
                            android:text="försäkras för"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <ImageView
                        android:contentDescription="@null"
                        android:src="@drawable/ic_expand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </android.support.design.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/deductibleFootnote"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/thingsCoverageCard"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:src="@drawable/ic_filled_checkmark"
                    android:contentDescription="@null"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/circular_book"
                    android:textSize="14sp"
                    android:textColor="@color/off_black"
                    android:text="Din självrisk är 1 500 kr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/totalCoverageFootnote"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/deductibleFootnote"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:src="@drawable/ic_filled_checkmark"
                    android:contentDescription="@null"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/circular_book"
                    android:textSize="14sp"
                    android:textColor="@color/off_black"
                    android:text="Prylarna försäkras till totalt 1 000 000 kr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/travelFootnote"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/totalCoverageFootnote"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:src="@drawable/ic_filled_checkmark"
                    android:contentDescription="@null"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/circular_book"
                    android:textSize="14sp"
                    android:textColor="@color/off_black"
                    android:text="Gäller på resor vartsomhelst i världen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>