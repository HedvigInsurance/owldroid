<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:padding="16dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:fontFamily="@font/circular_bold"
            android:text="@string/profile_title"
            android:textColor="@color/black"
            android:textSize="32sp" />
    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@id/profile_loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@id/profile_charity_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@id/profile_rows_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_charity_image"
        tools:visibility="visible">

        <com.hedvig.android.owldroid.ui.profile.ProfileMenuRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableSrc="@drawable/icon_my_info"
            app:description="Blargh"
            app:name="@string/my_info_row_title" />

        <com.hedvig.android.owldroid.ui.profile.ProfileMenuRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:drawableSrc="@drawable/icon_my_home"
            app:description="Blargh"
            app:name="@string/my_home_row_title" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
