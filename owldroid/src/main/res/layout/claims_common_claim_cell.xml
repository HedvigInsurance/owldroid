<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:clipToPadding="false"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin_double"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/commonClaimCellIcon"
            android:layout_width="@dimen/common_claim_icon_size"
            android:layout_height="@dimen/common_claim_icon_size"
            tools:src="@drawable/icon_failure" />

        <TextView
            android:id="@+id/commonClaimCellLabel"
            style="@style/Body.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_quadruple"
            tools:text="Drulle" />
    </LinearLayout>
</android.support.design.card.MaterialCardView>