<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@id/profile_payment_loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginTop="26dp"
        android:id="@id/profile_payment_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ProfileSubscreenHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_payment_header"
        />

    <RelativeLayout
        android:id="@id/profile_payment_amount_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_payment_header">

        <android.support.v7.widget.AppCompatImageView
            android:id="@id/profile_payment_sphere"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/sphere" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/profile_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/soray_extrabold"
            android:gravity="center_horizontal"
            android:lines="2"
            android:textColor="@color/off_black_dark"
            android:textSize="48sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>