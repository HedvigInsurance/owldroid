<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="text_xxlarge">32sp</dimen>
    <dimen name="text_xlarge">24sp</dimen>
    <dimen name="text_large">18sp</dimen>
    <dimen name="text_medium">16sp</dimen>
    <dimen name="text_small">14sp</dimen>
    <dimen name="text_xsmall">12sp</dimen>

    <dimen name="spacing_large">8sp</dimen>
    <dimen name="spacing_medium">6sp</dimen>
    <dimen name="spacing_small">4sp</dimen>

    <style name="Header">
        <item name="android:fontFamily">@font/soray_extrabold</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="Header.Large" parent="Header">
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="Header.Regular" parent="Header">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Headline">
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="Headline.Large" parent="Headline">
        <item name="android:fontFamily">@font/soray_extrabold</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="Headline.Large.Negative" parent="Headline.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Headline.Medium" parent="Headline">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_large</item>
    </style>

    <style name="Headline.Medium.Negative" parent="Headline.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Headline.Small" parent="Headline">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_medium</item>
    </style>

    <style name="Headline.Small.Negative" parent="Headline.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textColor">@color/off_black</item>
    </style>

    <style name="Body.Regular" parent="Body">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_large</item>
    </style>

    <style name="Body.Regular.Link" parent="Body.Regular">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="Body.Regular.Link.Caution" parent="Body.Regular.Link">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Body.Regular.Link.Emphasized" parent="Body.Regular.Link">
        <item name="android:fontFamily">@font/circular_medium</item>
    </style>

    <style name="Body.Regular.Link.Emphasized.Caution" parent="Body.Regular.Link.Emphasized">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Body.Regular.Negative" parent="Body.Regular">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body.Small" parent="Body">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_large</item>
    </style>

    <style name="Body.Small.Link" parent="Body.Small">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="Body.Small.Link.Caution" parent="Body.Small.Link">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Body.Small.Link.Emphasized" parent="Body.Small.Link">
        <item name="android:fontFamily">@font/circular_medium</item>
    </style>

    <style name="Body.Small.Link.Emphasized.Caution" parent="Body.Small.Link.Emphasized">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="Body.Small.Negative" parent="Body.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body.XSmall" parent="Body">
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>
    </style>

    <style name="Body.XSmall.Negative" parent="Body.XSmall">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabBar">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/off_black</item>
    </style>

    <style name="TabBar.Active" parent="TabBar">
        <item name="android:textColor">@color/purple</item>
    </style>
</resources>