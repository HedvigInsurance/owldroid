<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ProfileHeader">
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textColor">@color/off_black_dark</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="AppBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/off_white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="ProfileSectionHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textColor">@color/off_black_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileFieldLabel">
        <item name="android:textColor">@color/off_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/circular_book</item>
    </style>

    <style name="ProfileField" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/ProfileFieldLabel</item>
        <item name="colorControlActivated">@color/purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textColor">@color/off_black_dark</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="HedvigButton">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/off_white</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay.ExpandedTitle">
        <item name="android:textColor">@color/off_black_dark</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay.CollapsedTitle">
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="AppTheme.MenuItem">
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionMenuTextColor">@color/purple</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.MenuItem</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="DialogParagraph">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/off_black</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="DialogButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:fontFamily">@font/circular_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TrustlyTitle">
        <item name="android:fontFamily">@font/soray_extrabold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="TrustlyParagraph">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

    <style name="DefaultParagraph">
        <item name="android:fontFamily">@font/circular_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/off_black_dark</item>
    </style>

</resources>
