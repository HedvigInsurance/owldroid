<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hedvig.android.app.MarketingActivity">

    <TextView
        android:id="@+id/text123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:fontFamily="@font/circular_book"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.hedvig.android.app.StoryPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
    />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
    >
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/marketing_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="5dp"
            android:text="@string/marketing_login"
            android:textAllCaps="false"
            android:fontFamily="@font/circular_book"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_secondary"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="visible"
        />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/marketing_proceed"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="5dp"
            android:text="@string/marketing_proceed"
            android:textAllCaps="false"
            android:fontFamily="@font/circular_book"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="@drawable/button_primary"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="visible"
        />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>